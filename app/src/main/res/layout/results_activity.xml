<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.unitally.calculations.ResultsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Graphical Module -->
        <FrameLayout
            android:id="@+id/graphic_module_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:background="@color/background_color">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/backgrounds/scenic[15]" />
        </FrameLayout>

        <!-- Numerical Module -->
        <androidx.cardview.widget.CardView
            android:id="@+id/numerical_module_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/staging_module_container"
            android:layout_below="@id/graphic_module_container"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="1dp"
            app:cardBackgroundColor="@color/background_color"
            app:cardCornerRadius="4dp">

            <include layout="@layout/results_numerical_module" />

        </androidx.cardview.widget.CardView>

        <!-- Staging Module -->
        <FrameLayout
            android:id="@+id/staging_module_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp">

            <include
                layout="@layout/results_staging_module"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp" />

        </FrameLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
