<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unitally.calculations.ResultsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Graphical Module -->
        <FrameLayout
            android:id="@+id/graphic_module_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/backgrounds/scenic[15]" />
        </FrameLayout>

        <!-- Numerical Module -->
        <FrameLayout
            android:id="@+id/numerical_module_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/graphic_module_container"
            android:layout_above="@id/staging_module_container">

            <include layout="@layout/results_numerical_module" />

        </FrameLayout>

        <!-- Staging Module -->
        <FrameLayout
            android:id="@+id/staging_module_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <include
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                layout="@layout/ticker_view" />

        </FrameLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
