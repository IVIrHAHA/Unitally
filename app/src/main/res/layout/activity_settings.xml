<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Settings.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_inc_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="clip_vertical"
            android:background="@color/background_color"
            android:text="Increment Amount"
            android:textAppearance="@style/CustomTextStyle" />

        <TextView
            android:id="@+id/settings_delete_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="clip_vertical"
            android:background="@color/background_color"
            android:text="Delete All Units"
            android:textAppearance="@style/CustomTextStyle" />

        <TextView
            android:id="@+id/settings_propogate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="clip_vertical"
            android:background="@color/background_color"
            android:text="Propagate"
            android:textAppearance="@style/CustomTextStyle" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
    </FrameLayout>

</FrameLayout>